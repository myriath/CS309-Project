<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CS309Android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/carb</item>
        <item name="colorPrimaryVariant">@color/darkcarb</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/oil</item>
        <item name="colorSecondaryVariant">@color/darkoil</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ButtonMain" parent="android:Widget.Button">
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/protein</item>
    </style>

    <style name="ButtonGray" parent="android:Widget.Button">
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gray</item>
    </style>
</resources>